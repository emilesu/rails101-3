<div class="col-md-12">

  <h2 class="text-center">我加入的话题组</h2>

  <table class="table">
    <thead>
      <tr>
        <th>#</th>
        <th>标题</th>
        <th>简介</th>
        <th>回复数</th>
        <th>最后修改时间</th>
      </tr>
    </thead>

    <tbody>
      <% @groups.each do |group| %>
        <tr>
          <td>#</td>
          <td><%= link_to(group.title, group_path(group)) %></td>
          <td><%= group.description %></td>
          <td><%= group.posts.count %></td>
          <td><%= group.updated_at %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
